{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "lib": [
      "dom",
      "es2015",
    ],
    "outDir": "./dist/declarations",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "**/*.spec.*"
  ]
}
